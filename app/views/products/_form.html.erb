<%= form_for @product, html: {class: 'form-horizontal'} do |f| %>
    <%= link_to 'Back', products_url %>

    <div class="form-group">
      <%= f.label :period, value: 'Выберите категорию*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.collection_select :category_id, Category.all.order(created_at: :desc), :id, :title, {},
                                autofocus: true, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @product, field_name: :title %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :title, 'Товар', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :title, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :picture, 'Фото*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.file_field :picture, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :text, 'Описание', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :text, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :price, 'Цена', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :price, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-3 col-sm-offset-3 col-xs-offset-12 col-md-6 col-sm-6 col-xs-12">
        <%= f.submit 'Сохранить', class: 'btn btn-success' %>
      </div>
    </div>
<% end %>