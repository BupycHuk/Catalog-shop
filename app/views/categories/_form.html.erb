<%= form_for @category, html: {class: 'form-horizontal'} do |f| %>
    <%= link_to 'Back', categories_url %>
    <div class="form-group">
      <%= f.label :title, 'Категория', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :title, autofocus: true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-3 col-sm-offset-3 col-xs-offset-12 col-md-6 col-sm-6 col-xs-12">
        <%= f.submit 'Сохранить', class: 'btn btn-success' %>
      </div>
    </div>
<% end %>